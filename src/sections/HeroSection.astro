---
import BgImage from "@/assets/i75road.jpg";
import Button from "@/components/Button/Button";
import Heading from "@/components/Heading";
import PartsLoop from "@/components/PartsLoop.astro";
---

<section class="relative overflow-visible bg-light-primary">
  <!-- Hero -->
  <div
    class="relative bg-cover bg-center lg:bg-fixed min-h-[60vh] lg:min-h-[100vh]
           flex flex-col items-center justify-between space-y-4
           pb-28 md:pb-36 lg:pb-44"
    style={`background-image: url("${BgImage.src}");`}
  >
    <div class="absolute inset-0 bg-dark-primary/35"></div>

    <div
      class="relative w-8/10 z-10 text-center flex justify-center items-center flex-col py-4 md:py-9 lg:py-12 xl:py-15 m-0"
    >
      <Heading className="text-light-primary drop-shadow-xl h1">
        Final Days of the Summer Special, Get It Now!
      </Heading>

      <p class="text-light-primary/90 text-lg md:text-xl max-w-5xl">
        Get On i-75 with Darius Clark, because The Right Teacher Makes All The
        Difference!
      </p>

      <div class="mt-6 md:mt-8 flex justify-center flex-wrap gap-4 md:gap-6">
        <Button variant="primary" className="h4" href="#quote"
          >Get it Now</Button
        >
      </div>
    </div>

    <PartsLoop
      class="absolute left-1/2 -translate-x-1/2 bottom-0 translate-y-2/8 z-50 flex justify-center"
      cardClass="rounded-2xl shadow-xl ring-1 ring-light-primary/10"
    />
  </div>
</section>

<div class="py-12"></div>
