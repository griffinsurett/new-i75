---
// src/components/StatCard.astro
import Heading from "@/components/Heading";

const {
  stat,
  label,
  description = "",
  class: className = "",
  statClass = "text-primary font-black",
  labelClass = "text-dark-primary font-bold",
  descriptionClass = "text-dark-secondary",
} = Astro.props;
---

<div class={`relative text-center p-8 md:p-10 bg-white rounded-3xl shadow-2xl ring-1 ring-white/20 backdrop-blur-sm group overflow-hidden ${className}`}>
  <!-- Decorative background element -->
  <div class="absolute inset-0 bg-gradient-to-br from-white via-white to-gray-50 opacity-90 group-hover:opacity-100 transition-opacity duration-500"></div>
  
  <!-- Subtle pattern overlay -->
  <div class="absolute top-0 right-0 w-20 h-20 bg-primary/5 rounded-full transform translate-x-8 -translate-y-8 group-hover:scale-150 transition-transform duration-700"></div>
  
  <div class="relative z-10">
    <!-- Main Statistic -->
    <div class="mb-6">
      <Heading 
        tagName="div" 
        className={`text-6xl md:text-7xl lg:text-8xl leading-none tracking-tight ${statClass} drop-shadow-sm`}
      >
        {stat}
      </Heading>
    </div>
    
    <!-- Label -->
    <div class="mb-4">
      <Heading 
        tagName="h3" 
        className={`text-xl md:text-2xl leading-tight ${labelClass}`}
      >
        {label}
      </Heading>
    </div>
    
    <!-- Optional Description -->
    {description && (
      <p class={`text-base md:text-lg leading-relaxed ${descriptionClass}`}>
        {description}
      </p>
    )}
  </div>

  <!-- Hover glow effect -->
  <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-primary/20 via-transparent to-primary/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
</div>