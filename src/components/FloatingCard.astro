---
// src/components/FloatingCard.astro
const {
  // Styling props - just pass classes directly
  class:
    className = "backdrop-blur-sm ring-3 ring-light-primary backdrop-blur-sm",
  position = "-bottom-6 -left-6", // pass position classes directly

  // Card styling
  cardClass = "bg-primary backdrop-blur-sm rounded-2xl shadow-lg ring-1 ring-black/10 p-6 max-w-xs",
} = Astro.props;

const finalCardClass = ["absolute", position, cardClass, className]
  .filter(Boolean)
  .join(" ");
---

<div class={finalCardClass}>
  <slot />
</div>
