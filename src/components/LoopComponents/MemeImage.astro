---
// src/components/MemeImage.astro
import { Image } from "astro:assets";
import Heading from "@/components/Heading";

const {
  img,
  label,
  alt = label,
  class: className = "",
  imageClass = "absolute inset-0 w-full h-full object-cover",
  labelClass = "text-primary font-bold text-center",
  containerClass = "space-y-4",
} = Astro.props;
---

<div class={`${containerClass} ${className}`}>
  <!-- Image Container - Fixed exact size -->
  <div class="relative w-full h-64 md:h-86 mx-auto rounded-2xl overflow-hidden shadow-lg ring-1 ring-black/10">
    <Image
      src={img}
      alt={alt}
      class={imageClass}
      widths={[400, 600, 800]}
      sizes="(min-width: 768px) 384px, 320px"
      loading="lazy"
    />
  </div>
  
  <!-- Label -->
  <div class="px-4">
    <Heading 
      tagName="h3" 
      className={`h5 ${labelClass}`}
    >
      {label}
    </Heading>
  </div>
</div>