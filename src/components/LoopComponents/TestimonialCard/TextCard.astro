---
import { Image } from "astro:assets";
import Heading from "@/components/Heading";

const {
  name,
  title,
  company = "",
  avatar,
  testimonial,
  rating = 5,
  class: className = "",
} = Astro.props;
---
<article class={`rounded-2xl p-6 shadow-xl bg-primary text-white ${className}`}>
  <!-- header -->
  <div class="flex items-center gap-3 mb-4">
    {avatar && (
      <Image
        src={avatar}
        alt={name}
        class="w-12 h-12 rounded-full object-cover flex-shrink-0"
        loading="lazy"
      />
    )}
    <div class="min-w-0">
      <Heading tagName="h4" className="font-bold text-lg text-white truncate">
        {name}
      </Heading>
      <p class="text-sm text-white/80 truncate">{title}</p>
      {company && <p class="text-xs text-white/70 truncate">{company}</p>}
    </div>
  </div>

  <!-- stars -->
  <div class="flex gap-1 mb-3">
    {Array.from({ length: 5 }, (_, i) => (
      <svg
        class={`w-4 h-4 ${i < rating ? "text-yellow-400" : "text-white/40"}`}
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
    ))}
  </div>

  <!-- quote -->
  <p class="text-base md:text-lg leading-relaxed text-white/95 font-medium">
    “{testimonial}”
  </p>
</article>
