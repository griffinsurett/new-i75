---
// src/components/FeatureCard.astro
import { Icon } from "astro-icon/components";
import Heading from "@/components/Heading";

const {
  title,
  description,
  iconName,
  iconSet = "lucide",
  class: className = "",
  titleClass = "text-white font-bold",
  descriptionClass = "text-white/90 leading-relaxed",
  featured = false,
} = Astro.props;
---

<div class={`group relative overflow-hidden rounded-3xl transition-all duration-500 hover:scale-105 ${
  featured 
    ? 'bg-gradient-to-br from-primary via-primary to-primary/80 shadow-2xl ring-2 ring-primary/20' 
    : 'bg-gradient-to-br from-gray-800 via-gray-900 to-black shadow-xl'
} ${className}`}>
  
  <!-- Background Pattern -->
  <div class="absolute inset-0 opacity-10">
    <div class="absolute top-0 right-0 w-32 h-32 bg-white rounded-full transform translate-x-16 -translate-y-16"></div>
    <div class="absolute bottom-0 left-0 w-24 h-24 bg-white/50 rounded-full transform -translate-x-12 translate-y-12"></div>
  </div>
  
  <!-- Content -->
  <div class="relative z-10 p-8 md:p-10 h-full flex flex-col">
    
    <!-- Icon -->
    {iconName && (
      <div class={`w-16 h-16 ${featured ? 'bg-white/20' : 'bg-primary/20'} backdrop-blur-sm rounded-2xl flex items-center justify-center mb-6 group-hover:scale-110 transition-transform duration-300`}>
        <Icon 
          name={`${iconSet}:${iconName}`}
          class={`w-8 h-8 ${featured ? 'text-white' : 'text-primary'}`}
        />
      </div>
    )}
    
    <!-- Title -->
    <Heading 
      tagName="h3" 
      className={`h4 mb-4 ${titleClass}`}
    >
      {title}
    </Heading>
    
    <!-- Description -->
    <p class={`text-base flex-1 ${descriptionClass}`}>
      {description}
    </p>
    
    <!-- Decorative Element -->
    <div class={`mt-6 w-12 h-1 ${featured ? 'bg-white/40' : 'bg-primary/60'} rounded-full`}></div>
    
  </div>
  
  <!-- Hover Glow Effect -->
  <div class="absolute inset-0 rounded-3xl bg-gradient-to-r from-primary/20 via-transparent to-primary/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
  
</div>